<script>
    function downloadPDF() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF('p', 'mm', 'a4');
        const reportDate = new Date().toLocaleDateString();
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        
        // Capture the report table
        html2canvas(document.querySelector('.table')).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            const imgWidth = 190; // A4 page width in mm
            const pageHeight = 280; // A4 page height in mm
            const imgHeight = canvas.height * imgWidth / canvas.width;
            
            // Add header
            doc.setFontSize(18);
            doc.text('Sales Report', 15, 15);
            doc.setFontSize(12);
            doc.text(`Date Range: ${startDate} to ${endDate}`, 15, 23);
            
            // Add report image
            doc.addImage(imgData, 'PNG', 10, 30, imgWidth, imgHeight);
            
            // Add footer
            const totalPages = doc.internal.getNumberOfPages();
            for(let i = 1; i <= totalPages; i++) {
                doc.setPage(i);
                doc.setFontSize(10);
                doc.text(`Page ${i} of ${totalPages}`, 180, 287, null, null, 'right');
                doc.text(`Generated: ${reportDate}`, 15, 287);
            }

            // Save the PDF
            doc.save(`SalesReport_${startDate}_to_${endDate}.pdf`);
        });
    }
</script>

<script>
    document.getElementById('salesReportForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        const interval = document.getElementById('interval').value;

        // Fetch report data from the server
        fetch('/api/sales-report', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                startDate: startDate,
                endDate: endDate,
                interval: interval
            })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            // Populate report data
            const reportDataElement = document.getElementById('reportData');
            reportDataElement.innerHTML = ''; // Clear previous data
            data.reportData.forEach(report => {
                reportDataElement.innerHTML += `
                    <tr>
                        <td>${report.orderId}</td>
                        <td>${report.date}</td>
                        <td>${report.items}</td>
                        <td>₹${report.price}</td>
                        <td>₹${report.totalAmount}</td>
                        <td>${report.coupon}</td>
                        <td>₹${report.discount}</td>
                    </tr>
                `;
            });

            // Update metrics
            document.getElementById('totalSalesCount').textContent = data.totalSalesCount;
            document.getElementById('totalOrderAmount').textContent = data.totalOrderAmount;
            document.getElementById('totalDiscount').textContent = data.totalDiscount;
        })
        .catch(error => {
            console.error('There was a problem with the fetch operation:', error);
        });
    });
</script>

