<script>

document.addEventListener('DOMContentLoaded', function() {
    const categoryForm = document.getElementById('categoryForm');
    
    categoryForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Get form values
        const name = document.getElementById('categoryName').value.trim();
        const description = document.getElementById('categoryDescription').value.trim();
        const status = document.getElementById('categoryStatus').value.trim();

        const categoryData = {
          name: name.trim(),
          description: description.trim(),
          status: status,
        };

    const result = await fetch('/admin/category', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(categoryData),
    }).then((response) => response.json());

    if (result.success === true) {
      Swal.fire({
        icon: 'success', // Success icon
        title: 'Category Created',
        text: 'The category has been created successfully!',
        showConfirmButton: false, // Hide the confirm button
        timer: 2000, // Auto-close after 2 seconds
      }).then(() => {
        // Reload the page after the alert closes
        window.location.reload();
      });
    } else if (result.message === 'Category already exists') {
      Swal.fire({
        icon: 'error', // Error icon
        title: 'Duplicate Category',
        text: 'The category name already exists. Please use a different name.',
        confirmButtonText: 'Try Again', // Button text for retry
        
      });
    } else {
      Swal.fire({
        icon: 'error', // Error icon
        title: 'Error',
        text: result.message || 'An unexpected error occurred.',
        confirmButtonText: 'OK',});
    }  
    });
    });
    </script>


    <script>

    async function openEditCategoryModal(categoryId) {
        console.log("Editing category with ID:", categoryId);
        try {
            // Fetch the category details from the backend
            const response = await fetch(`/admin/categories?id=${categoryId}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (!response.ok) {
                throw new Error('Failed to fetch category details');
            }

            const categoryData = await response.json();
            console.log(categoryData);

            // Set the input field values with category data
            document.getElementById('categoryNameNew').value = categoryData.name || '';
            document.getElementById('categoryDescriptionNew').value = categoryData.description || '';
            document.getElementById('categoryStatusNew').value = categoryData.status || '';
            document.getElementById('id').innerHTML = categoryData._id || '';

            // Open the modal (Bootstrap example)
            var myModal = new bootstrap.Modal(document.getElementById('editCatModalNew'), {
              // backdrop: 'static', // Prevent closing the modal by clicking outside
              // keyboard: false // Prevent closing the modal with the keyboard
            });
            myModal.show(); 

        } catch (error) {
            console.error('Error fetching category data:', error);
            alert('Failed to fetch category details. Please try again.');
        }
    }


    </script>

