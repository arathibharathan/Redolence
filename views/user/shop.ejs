  <script>
    document.addEventListener('DOMContentLoaded', function() {
    // DOM Elements
    const searchInput = document.getElementById('search-input');
    const sortOptions = document.getElementById('sort-options');
    const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
    const paginationButtons = document.querySelectorAll('.pagination-button');
    const prevPageButton = document.getElementById('prev-page');
    const nextPageButton = document.getElementById('next-page');
    
    // Current state
    let currentState = {
        search: '',
        sort: sortOptions.value || 'newest',
        categories: [],
        page: parseInt(new URLSearchParams(window.location.search).get('page')) || 1
    };
    
    // Initialize from URL params
    function initFromURL() {
        const urlParams = new URLSearchParams(window.location.search);
        
        // Set search
        const searchTerm = urlParams.get('search');
        if (searchTerm) {
            searchInput.value = searchTerm;
            currentState.search = searchTerm;
        }
        
        // Set sort
        const sortValue = urlParams.get('sort');
        if (sortValue) {
            sortOptions.value = sortValue;
            currentState.sort = sortValue;
        }
        
        // Set categories
        const categoryParam = urlParams.get('category');
        if (categoryParam) {
            const selectedCategories = categoryParam.split(',');
            currentState.categories = selectedCategories;
            
            // Check the corresponding checkboxes
            categoryCheckboxes.forEach(checkbox => {
                if (selectedCategories.includes(checkbox.value)) {
                    checkbox.checked = true;
                }
            });
        }
        
        // Set page
        const pageParam = urlParams.get('page');
        if (pageParam) {
            currentState.page = parseInt(pageParam);
        }
    }
    
    // Build URL from current state
    function buildURL() {
        const params = new URLSearchParams();
        
        if (currentState.search) {
            params.set('search', currentState.search);
        }
        
        if (currentState.sort && currentState.sort !== 'newest') {
            params.set('sort', currentState.sort);
        }
        
        if (currentState.categories.length > 0) {
            params.set('category', currentState.categories.join(','));
        }
        
        if (currentState.page > 1) {
            params.set('page', currentState.page);
        }
        
        return '/shop?' + params.toString();
    }
    
    // Navigate to the new URL
    function navigateToURL() {
        window.location.href = buildURL();
    }
    
    // Event Listeners
    
    // Search functionality
    searchInput.addEventListener('keyup', function(e) {
        if (e.key === 'Enter') {
            currentState.search = this.value.trim();
            currentState.page = 1; // Reset to page 1 when searching
            navigateToURL();
        }
    });
    
    // Sort functionality
    sortOptions.addEventListener('change', function() {
        currentState.sort = this.value;
        currentState.page = 1; // Reset to page 1 when sorting
        navigateToURL();
    });
    
    // Category filter functionality
    categoryCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            if (this.checked) {
                currentState.categories.push(this.value);
            } else {
                currentState.categories = currentState.categories.filter(cat => cat !== this.value);
            }
            currentState.page = 1; // Reset to page 1 when filtering
            navigateToURL();
        });
    });
    
    // Pagination functionality
    paginationButtons.forEach(button => {
        if (button.classList.contains('page-number')) {
            button.addEventListener('click', function() {
                currentState.page = parseInt(this.getAttribute('data-page'));
                navigateToURL();
            });
        }
    });
    
    // Previous page button
    if (prevPageButton) {
        prevPageButton.addEventListener('click', function() {
            if (currentState.page > 1) {
                currentState.page--;
                navigateToURL();
            }
        });
    }
    
    // Next page button
    if (nextPageButton) {
        nextPageButton.addEventListener('click', function() {
            const totalPages = parseInt(document.querySelectorAll('.page-number').length);
            if (currentState.page < totalPages) {
                currentState.page++;
                navigateToURL();
            }
        });
    }
    
    // Initialize from URL
    initFromURL();
});
  </script>

