              <option value="price-asc">Price: Low to High</option>
              <option value="price-desc">Price: High to Low</option>
              <option value="a-z">A - Z</option>
              <option value="z-a">Z - A</option>
            </select>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <!-- Sidebar with filters -->
        <div class="col-lg-3">
          <div class="filter-sidebar">
            <h3>
              <a data-toggle="collapse" href="#widget-category" role="button" aria-expanded="true"
                aria-controls="widget-category">
                Categories
              </a>
            </h3>
            <div class="collapse show" id="widget-category">
              <div class="widget-body">
                <div class="filter-categories" id="category-filter">
                  <% categories.forEach(category=> { %>
                    <div class="custom-control custom-checkbox mb-2">
                      <input type="checkbox" class="custom-control-input category-checkbox" id="cat-<%= category._id %>"
                        value="<%= category._id %>">
                      <label class="custom-control-label" for="cat-<%= category._id %>">
                        <%= category.name %>
                      </label>
                    </div>
                    <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!-- Products Grid -->
<div class="col-lg-9">
  <div class="product-wrapper">
    <% for (let i = 0; i < products.length; i++) { %>
      <% if (i % 3 === 0) { %> <!-- Start a new row every 3 products -->
        <div class="row">
      <% } %>

      <div class="col-md-4 col-6 mb-4"> <!-- Change to col-md-4 for 3 products per row -->
        <div class="product">
          <figure class="product-media">
            <a href="/product?id=<%= products[i]._id %>">
              <img src="../../uploads/<%= products[i].images[0] %>" alt="<%= products[i].name %>" class="product-image">
            </a>
            <div class="product-action-vertical">
              <a href="#"
                class="btn-product-icon btn-wishlist btn-expandable <%= products[i].isInWishlist ? 'in-wishlist' : '' %>"
                data-id="<%= products[i]._id %>">
                <span>
                  <%= products[i].isInWishlist ? 'Remove from wishlist' : 'Add to wishlist' %>
                </span>
              </a>
            </div>
            <div class="product-action action-icon-top">
              <div class="product-action">
                <button class="btn-product btn-cart" data-id="<%= products[i]._id %>">
                  <span>add to cart</span>
                </button>
              </div>
            </div>
          </figure>

          <div class="product-body">
            <h3 class="product-title">
              <a href="/product?id=<%= products[i]._id %>">
                <%= products[i].name %>
              </a>
            </h3>
            <div class="product-price" >
              <% if (products[i].highestDiscount > 0) { %>
                <span class="original-price"><s>₹<%= products[i].originalPrice.toFixed(2) %></s></span>
                <span class="discountPrice" class="discounted-price"> ₹<%= products[i].offerPrice.toFixed(2) %></span>
              <% } else { %>
                ₹<%= products[i].originalPrice.toFixed(2) %>
              <% } %>
            </div>
            <div>
              <span class="stock-badge <%= products[i].stock <= 0 ? 'stock-out' : 'stock-in' %>">
                <%= products[i].stock <= 0 ? 'OUT OF STOCK' : 'IN STOCK' %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <% if ((i + 1) % 3 === 0 || i === products.length - 1) { %> <!-- Close the row after 3 products or at the end -->
        </div>
      <% } %>

    <% } %>
  </div>
</div>

  </div>
</div>

            <!-- Pagination -->
            <div class="pagination-container" id="pagination-container">
              <button id="prev-page" class="pagination-button" <%=page===1 ? 'disabled' : '' %>>Prev</button>

              <% for (let i=0; i < pages; i++) { %>
