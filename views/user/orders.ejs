  <script>
    let currentOrderId = null;

    function openCancelOrderModal(orderId) {
    currentOrderId = orderId; // Store the current order ID
    
    // Check if the order is already cancelled
    const orderCard = document.querySelector(`.order-card[data-order-id="${orderId}"]`);
    const statusSpan = orderCard.querySelector('.order-status');
    
    if (statusSpan.textContent.trim() === 'Cancelled') {
        Swal.fire({
            title: 'Information',
            text: 'This order has already been cancelled.',
            icon: 'info',
            confirmButtonText: 'OK'
        });
        return;
    }
    
    // Show the modal if not cancelled
    $('#cancelOrderModal').modal('show');
}

    // Function to toggle the order details view
    function toggleDetails(button) {
        const orderCard = button.closest('.order-card');
        const detailsDiv = orderCard.nextElementSibling;
        
        if (detailsDiv && detailsDiv.classList.contains('order-items')) {
            if (detailsDiv.style.display === 'none') {
                detailsDiv.style.display = 'block';
                button.textContent = 'Hide Details';
            } else {
                detailsDiv.style.display = 'none';
                button.textContent = 'View Details';
            }
        }
    }

    // Function to handle the retry payment
    async function retryPayment(orderId) {
        try {
            const response = await fetch('/retry-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId }),
            });

            const responseData = await response.json();
            console.log('asd', responseData)
            if (!response.ok) {
                throw new Error(responseData.message || 'Failed to retry payment');
            }

            // Handle Razorpay payment
            var options = {
                "key": responseData.keyId,
                "amount": responseData.amount * 100,  // Convert to paise
                "currency": "INR",
                "name": responseData.name,
                "order_id": responseData.razorpayOrder.id,
                "handler": function (response) {
                    window.location.href = `/placeOrderInvoice?id=${responseData.id}`;
                },
                "theme": {
                    "color": "#2300a3"
                }
            };

            var razorpayObject = new Razorpay(options);

            razorpayObject.on('payment.failed', function (response) {
              Swal.fire({
							icon: 'error',
							title: "Payment Faileds",
							text: 'Your order Payment Faileds',
							confirmButtonText: 'OK',
						})
							window.location.href = `/cancelRazorpay?id=${responseData.id}`;
						});

            razorpayObject.open();
            
            

        } catch (error) {
            console.error('Error retrying payment:', error);
            alert('An error occurred while retrying payment. Please try again.');
        }
    }

    document.getElementById('confirmCancelOrder').addEventListener('click', async () => {
        const reason = document.getElementById('cancelReason').value;
        if (!reason) {
            alert('Please select a reason for cancellation.');
            return;
        }

        await cancelOrder(currentOrderId, reason); // Call the cancelOrder function with the reason
        $('#cancelOrderModal').modal('hide'); // Hide the modal
    });

    async function cancelOrder(orderId, reason) {
    try {
        const response = await fetch('/cancel-order', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ orderId, reason }),
        });

        const data = await response.json();

        if (response.ok) {
            // Use SweetAlert instead of regular alert
            Swal.fire({
                title: 'Success!',
                text: data.message || 'Order cancelled successfully',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                // Update UI to reflect cancellation without page reload
                const orderCard = document.querySelector(`.order-card[data-order-id="${orderId}"]`);
                if (orderCard) {
                    // Update status text and class
                    const statusSpan = orderCard.querySelector('.order-status');
                    statusSpan.textContent = 'Cancelled';
                    statusSpan.className = 'order-status status-cancelled';
                    
                    // Disable the cancel button and change its appearance
                    const cancelButton = orderCard.querySelector('.btn-danger');
                    if (cancelButton) {
                        cancelButton.disabled = true;
                        cancelButton.classList.remove('btn-danger');
                        cancelButton.classList.add('btn-secondary');
                        cancelButton.textContent = 'Cancelled';
                    }
                }
            });
        } else {
            // Show error with SweetAlert
            Swal.fire({
                title: 'Error!',
                text: data.error || 'Failed to cancel order',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    } catch (error) {
        console.error('Error cancelling order:', error);
        Swal.fire({
            title: 'Error!',
            text: 'An error occurred while cancelling the order. Please try again.',
            icon: 'error',
            confirmButtonText: 'OK'
        });
    }
}
    </script>

  
