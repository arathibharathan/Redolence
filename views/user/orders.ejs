        <% if (orders && orders.length > 0) { %>
          <% orders.forEach(order => { %>
            <div class="order-card" data-order-id="<%= order._id %>">
              <div class="order-card-header">
                <h4 class="mb-0">Order #<%= order.order_id %></h4>
                <span class="order-status">
                  <%= order.orderStatus %>
                </span>
              </div>
            
              <div class="order-details">
                <div class="order-info">
                  <p><strong>Ordered On:</strong> <%= new Date(order.orderedAt).toLocaleString() %></p>
                  <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                  <p><strong>Total Amount:</strong> ₹<%= order.totalAmount.toFixed(2) %></p>
                </div>
              </div>
              <% if (order.orderStatus === "Cancelled") { %>
                <!-- Show disabled Cancel button for cancelled orders -->
                <button class="btn btn-secondary" disabled>Cancelled</button>
                <button class="btn btn-info" onclick="toggleDetails(this)">View Details</button>
              <% } else if (order.orderStatus === "Delivered") { %>
                <!-- Show Return and View Details buttons -->
                <button class="btn btn-warning" onclick="openReturnOrderModal('<%= order._id %>')">Return</button>
                <button class="btn btn-info" onclick="toggleDetails(this)">View Details</button>
              <% } else if (order.orderStatus === "Failed") { %>
                <!-- Show Repay and View Details buttons -->
                <button class="btn btn-success" onclick="retryPayment('<%= order._id %>')">Repay</button>
                <button class="btn btn-info" onclick="toggleDetails(this)">View Details</button>
              <% } else { %>
                <!-- Show Cancel and View Details buttons for active orders -->
                <button class="btn btn-danger" onclick="openCancelOrderModal('<%= order._id %>')">Cancel</button>
                <button class="btn btn-info" onclick="toggleDetails(this)">View Details</button>
              <% } %>
              
            </div>
            <div class="order-items" style="display: none;">
              <h5>Order Items</h5>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% order.orderItems.forEach(item => { %>
                    <tr>
                      <td><%= item.name %></td>
                      <td class="text-center"><%= item.quantity %></td>
                      <td class="text-right">₹<%= item.price %></td>
                      <td class="text-right">₹<%= item.totalPrice %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
          
              <% if (order.address && order.address.length > 0) { %>
                <h5 class="mt-4">Shipping Address</h5>
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Mobile</th>
                      <th>Street Address</th>
                      <th>City</th>
                      <th>Landmark</th>
                      <th>State</th>
                      <th>Pin Code</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.address.forEach((address, index) => { %>
                      <tr>
                        <td><%= address.name %></td>
                        <td><%= address.mobile %></td>
                        <td><%= address.streetAddress %></td>
                        <td><%= address.city %></td>
                        <td><%= address.landmark %></td>
                        <td><%= address.state %></td>
                        <td><%= address.pinCode %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              <% } else { %>
                <p>No shipping address found.</p>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <div class="alert alert-info text-center">
            <p>You have no orders yet.</p>
            <a href="/shop" class="btn btn-primary mt-3">Continue Shopping</a>
          </div>
        <% } %>
