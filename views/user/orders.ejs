    async function cancelOrder(orderId) {
    try {
        const response = await fetch('/cancel-order', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ orderId }), // Send the orderId in the request body
        });

        const data = await response.json(); // Parse the JSON response

        if (response.ok) {
          Swal.fire({
              icon: 'success',
              title: data.message,
              text: 'Order cancelled successfully!',
              confirmButtonText: 'OK'
            });
            
            // Find the order card in the DOM
            const orderCard = document.querySelector(`.order-card[data-order-id="${orderId}"]`);
            if (orderCard) {
                const statusSpan = orderCard.querySelector('.order-status');
                statusSpan.textContent = data.orderState.orderStatus; // Update the status text
                statusSpan.className = 'order-status status-cancelled'; // Update the class for styling

                // Optionally, hide the cancel button or change its state
                const cancelButton = orderCard.querySelector('button.btn-danger');
                if (cancelButton) {
                    cancelButton.style.display = 'none'; // Hide the cancel button
                }
            }
        } else {
            // Handle errors
            Swal.fire({
              icon: 'error',
              title: data.message,
              text: 'Failed to cancel order',
              confirmButtonText: 'OK'
            });
        }
    } catch (error) {
        console.error('Error cancelling order:', error);
        alert('An error occurred while cancelling the order. Please try again.');
    }
}
  </script>

