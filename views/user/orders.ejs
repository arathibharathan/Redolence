                  <% if (pagination.page < pagination.totalPages - 3) { %>
                      <li class="page-item disabled">
                          <a class="page-link">...</a>
                      </li>
                  <% } %>
                  <li class="page-item">
                      <a class="page-link" href="/orders?page=<%= pagination.totalPages %>"><%= pagination.totalPages %></a>
                  </li>
              <% } %>
              
              <!-- Next page button -->
