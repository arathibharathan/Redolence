    async function requestReturn(orderId, reason) {
        try {
            const response = await fetch('/request-return', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId, reason }), // Send the orderId and reason in the request body
            });

            const data = await response.json(); // Parse the JSON response

            if (response.ok) {
                alert(data.message); // Show success message
                
                // Update the UI to reflect the return request
                const orderCard = document.querySelector(`.order-card[data-order-id="${orderId}"]`);
                if (orderCard) {
                    const statusSpan = orderCard.querySelector('.order-status');
                    statusSpan.textContent = 'Return Requested'; // Update the status text
                    statusSpan.className = 'order-status status-cancelled'; // Update the class for styling

                    // Optionally, hide the return button
                    const returnButton = orderCard.querySelector('button.btn-warning');
                    if (returnButton) {
                        returnButton.style.display = 'none'; // Hide the return button
                    }
                }
            } else {
                alert(data.error || 'Failed to request return');
            }
        } catch (error) {
            console.error('Error requesting return:', error);
            alert('An error occurred while requesting the return. Please try again.');
        }
    }
