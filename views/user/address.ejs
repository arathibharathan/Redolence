document.addEventListener('DOMContentLoaded', () => {
    const addressContainer = document.querySelector('.row[data-address-container]');

    addressContainer.addEventListener('click', async (event) => {
        const deleteButton = event.target.closest('.delete-address');
        
        if (deleteButton) {
            event.preventDefault();
            
            // Show confirmation dialog
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this address?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            });

            if (result.isConfirmed) {
                const addressId = deleteButton.getAttribute('data-id');
                
                try {
                    const response = await fetch(`/address/${addressId}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Remove the address from DOM
                        const addressElement = deleteButton.closest('.col-md-6');
                        addressElement.remove();

                        // Show success message
                        Swal.fire({
                            icon: 'success',
                            title: 'Deleted!',
                            text: data.message,
                            timer: 2000,
                            showConfirmButton: false
                        });
                    } else {
                        // Show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: data.message
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Something went wrong!'
                    });
                }
            }
        }
    });
});
